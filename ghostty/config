theme = rose-pine
font-family = "AnonymicePro Nerd Font Mono"
font-size = 15
adjust-cell-height = 20%

copy-on-select=clipboard

keybind = alt+n=new_tab
keybind = alt+h=previous_tab
keybind = alt+l=next_tab
keybind = f11=toggle_window_decorations
keybind = f12=toggle_fullscreen

keybind = alt+shift+h=goto_split:left
keybind = alt+shift+l=goto_split:right

keybind = alt+i=move_tab:-1
keybind = alt+o=move_tab:+1

term = xterm-256color